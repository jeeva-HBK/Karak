<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item> <!--appBase_color-->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item> <!--statusBar_Color-->
        <item name="colorOnPrimary">@color/white</item> <!--Button_Text-->
        <item name="fontFamily">@font/google_font</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!--Splash Theme-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="mCardStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut
        </item>
    </style>

    <style name="textAppearence" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="titleTextAppearence" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/cream</item>
    </style>

    <style name="centerBlackText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>